const { Schema, Model } = require('mongoose');

const ExerciseSchema = new Schema({
    name: {
        type: String,
        trim: true,
        required: 'Enter a name for the exercise'
    },
    type: {
        type: String,
        trim: true,
        required: 'Enter a type for the exercise'
    },
    weight: {
        type: Number,
        required: 'Enter a weight for the exercise'
    },
    sets: {
        type: Number,
        required: 'Enter a number of sets for the exercise'
    },
    reps: {
        type: Number,
        required: 'Enter a number of reps for the exercise'
    },
    duration: {
        type: Number,
        required: 'Enter a duration for the exercise'
    },
    distance: {
        type: Number,
        required: 'Enter a distance for the exercise'
    }
});

const Exercise = Model('Exercise', ExerciseSchema);

module.exports = Exercise;