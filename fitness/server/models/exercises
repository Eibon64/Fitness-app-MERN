// const { schema, model, mongo } = require('mongoose');
const { Schema, model } = require('mongoose');

const exerciseSchema = new Schema({
    name: {
        type: String,
        required: true,
        trim: true,
    },
    weight: {
        type: Number,
        required: false,
        trim: true,
    },
    sets: {
        type: Number,
        required: false,
        trim: true,
    },
    reps: {
        type: Number,
        required: false,
        trim: true,
    },
    duration: {
        type: Number,
        required: false,
        trim: true,
    },
    distance: {
        type: Number,
        required: false,
        trim: true,
    },
});

const exercise = model('exercise', exerciseSchema);

module.exports = exercise;