const { Schema, model } = require('mongoose');
// const bcrypt = require('bcrypt');


const UserSchema = new Schema({
    username: {
        type: String,
        trim: true,
        required: 'Enter a username'
    },
    password: {
        type: String,
        trim: true,
        required: 'Enter a password'
    },
   
});

const User = model('User', UserSchema);

module.exports = User;